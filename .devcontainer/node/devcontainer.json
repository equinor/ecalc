{
  "name": "Node.js",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "8gb"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "forwardPorts": [
    3001
  ],
  "onCreateCommand": "cd docs && npm install && pre-commit install",
  "postStartCommand": "cd docs && npm run start",
  "remoteUser": "node",
  "features": {
    "git": "latest",
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": {}
  }
}
